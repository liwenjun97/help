<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <Button
            android:text="返回"
            android:textColor="@color/black"
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:id="@+id/myservice_back"/>
        <TextView
            android:textColor="@color/black"
            android:text="服务展示"
            android:gravity="center_vertical"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"/>
    </LinearLayout>


    <TextView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@mipmap/nature_head"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/myservice_username"
            android:gravity="center"
            android:text="用户名"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"/>

    </LinearLayout>
    <TextView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/myservice_publishtime"
        android:gravity="left"
        android:text="5.25"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="20sp"/>
    <TextView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


        <TextView
            android:id="@+id/myservice_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="代拿快递"
            android:textColor="@color/black"
            android:textSize="20sp">

        </TextView>
        <TextView
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/myservice_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="200积分"
            android:textColor="@color/black"
            android:textSize="20sp">

        </TextView>

    <TextView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/myservice_people"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="5个人订购"
        android:textColor="@color/black"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="服务内容"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/myservice_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">
        <Button
            android:layout_weight="1"
            android:id="@+id/change_service"
            android:text="修改服务"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:layout_weight="1"
            android:id="@+id/close_service"
            android:text="关闭服务"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>